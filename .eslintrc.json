{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "fetch": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["jest"],
    "rules": {
      "max-len": [ "error", 100 ]
    },
    "overrides": [
      {
        "files": ["*.js"],
        "extends": ["plugin:jest/recommended", "plugin:prettier/recommended"]
      }
    ]
}
